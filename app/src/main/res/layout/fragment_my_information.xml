<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/green_light">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_favicon"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/option_item_ll">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/icon_my_message" />

                <TextView
                    style="@style/option_item_text"
                    android:text="我的消息" />
            </LinearLayout>



            <LinearLayout style="@style/option_item_ll">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/icon_my_note" />

                <TextView
                    style="@style/option_item_text"
                    android:text="我的收藏" />
            </LinearLayout>



            <LinearLayout style="@style/option_item_ll">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/icon_my_team" />

                <TextView
                    style="@style/option_item_text"
                    android:text="推荐给好友" />
            </LinearLayout>



            <LinearLayout style="@style/option_item_ll">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/icon_feedback" />

                <TextView
                    style="@style/option_item_text"
                    android:text="意见反馈" />
            </LinearLayout>

            <View
                android:background="@color/list_divider_color"
                style="@style/list_divider_line"/>

            <LinearLayout style="@style/option_item_ll">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/ic_my_setup" />

                <TextView
                    style="@style/option_item_text"
                    android:text="设置中心" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>